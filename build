#!/bin/sh

MAKEFILE='danillonunes.make'
DRUPALPATH='drupal'
TRANSLATIONS='pt-br'

LOCALSITESPATH='site'
PUBLICSITESPATH='default'

rm -rf $DRUPALPATH
drush make --translations=$TRANSLATIONS $MAKEFILE $DRUPALPATH
rm -rf $DRUPALPATH/sites/$PUBLICSITESPATH
ln -s $LOCALSITESPATH $DRUPALPATH/sites/$PUBLICSITESPATH
